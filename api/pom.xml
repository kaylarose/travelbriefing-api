<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.kaylarose</groupId>
    <artifactId>api</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <!-- Defaults to $J2OBJC_HOME environment var -->
        <J2OBJC_PATH>${env.J2OBJC_HOME}</J2OBJC_PATH>
        <!-- All transpiled classes from the com.totsp package will get prefixed with TOTSP -->
        <OBJC_PREFIX>com.totsp.*=TOTSP</OBJC_PREFIX>
        <!-- ./src/main/java -->
        <JAVA_SRC_PATH>${project.basedir}/src/main/java</JAVA_SRC_PATH>
        <!-- ./target/j2objc/src -->
        <OBJC_SRC_PATH>${project.build.directory}/j2objc/src</OBJC_SRC_PATH>
    </properties>

    <pluginRepositories>
        <pluginRepository>
            <id>sonatype-nexus-snapshots</id>
            <name>sonatype-nexus-snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </pluginRepository>
    </pluginRepositories>


    <dependencies>
        <!-- Must Include External Dependencies -->
        <dependency>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>animal-sniffer-annotations</artifactId>
            <version>1.15</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>com.squareup.okio</groupId>
            <artifactId>okio</artifactId>
            <version>1.9.0</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>19.0</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.7</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>io.reactivex</groupId>
            <artifactId>rxjava</artifactId>
            <version>1.1.6</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>com.squareup.retrofit2</groupId>
            <artifactId>retrofit</artifactId>
            <version>2.1.0</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>com.squareup.retrofit2</groupId>
            <artifactId>converter-gson</artifactId>
            <version>2.1.0</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>com.squareup.retrofit2</groupId>
            <artifactId>adapter-rxjava</artifactId>
            <version>2.1.0</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>com.squareup.okhttp3</groupId>
            <artifactId>okhttp</artifactId>
            <version>3.3.1</version>
            <classifier>sources</classifier>
        </dependency>
    </dependencies>

    <reporting>
        <outputDirectory>${project.build.directory}/j2objc</outputDirectory>
    </reporting>

    <build>
        <plugins>
            <plugin>
                <groupId>com.smoope.utils</groupId>
                <artifactId>j2objc-maven-plugin</artifactId>
                <!--<version>1.1.3-SNAPSHOT</version>-->
                <version>1.1.2</version>
                <configuration>
                    <!-- Externalize J2OBJC Path -->
                    <j2objcPath>${J2OBJC_PATH}/j2objc</j2objcPath>
                    <useArc>true</useArc>
                    <noPackageDirectories>true</noPackageDirectories>
                    <sourcePath>${JAVA_SRC_PATH}</sourcePath>
                    <d>${OBJC_SRC_PATH}</d>
                    <!-- Externalize Generated Class Prefix -->
                    <prefix>${OBJC_PREFIX}</prefix>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>